{
  "name": "metalsmith-simplewatch",
  "version": "0.0.1",
  "description": "A watch plugin for Metalsmith",
  "main": "./lib/",
  "scripts": {
    "jshint": "./node_modules/.bin/jshint ./lib/ ./test/",
    "test": "npm run jshint && ./node_modules/.bin/mocha --reporter spec"
  },
  "keywords": [
    "metalsmith",
    "watch"
  ],
  "author": "Christopher Cliff <ctcliff@gmail.com>",
  "repository": {
    "type": "git",
    "url": "http://github.com/christophercliff/metalsmith-simplewatch"
  },
  "license": "MIT",
  "dependencies": {
    "gaze": "^0.6.4"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.0.1",
    "jshint": "^2.5.6",
    "metalsmith": "^1.0.1",
    "mkdirp": "^0.5.0",
    "mocha": "^1.21.4",
    "rimraf": "^2.2.8"
  },
  "jshintConfig": {
    "asi": true,
    "boss": true,
    "eqeqeq": true,
    "expr": true,
    "immed": true,
    "latedef": "nofunc",
    "laxbreak": true,
    "laxcomma": true,
    "loopfunc": true,
    "newcap": true,
    "node": true,
    "predef": [
      "beforeEach",
      "describe",
      "it"
    ],
    "quotmark": "single",
    "scripturl": true,
    "sub": true,
    "trailing": true,
    "undef": true,
    "unused": true
  }
}
